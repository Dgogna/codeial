<div class="col">
    <div class="card ">
        <div class="card-body">     
            
            <h5>
                <%if((locals.user) && (locals.user.id==post.user.id)){%>
                    <small>
                        <a href="/posts/destroy/<%=post._id%>">del</a>
                    </small>
                <%}%>
                
                <%=post.content%>
            </h5>           
            <small>Posted by :- <%=post.user.name%></small>
            

            <div class="post-comments-list mt-4">
                <h6>Comments:</h6>
                <ul id="post-comments-<%=post._id%>">
                    <%for(comment of post.comments){%>
                        
                        <%- include("_comment"); -%>

                    <%}%>
                </ul>
            </div>

            <!-- Button trigger modal -->
            <%if(locals.user){%>
                <form action="/comments/create" method="post" class="row g-1">
                    <div class="col-auto">
                        <input type="text" name="content" placeholder="Add Comment..." required class="form-control">
                            <input type="hidden" name="post" value="<%=post._id%>">
                    </div>
                    <div class="col-auto">
                        <input type="submit" value="Go" class="btn btn-dark mb-3">
                    </div>
                </form>
                <!-- <form action="/comments/create" method="post">
                    <input type="text" name="content" placeholder="Add Comment..." required>
                    <input type="hidden" name="post" value="<%=post._id%>">
                    <input type="submit" value="Add Comment">
                </form> -->
            <%}%>
           

            <!-- Modal -->

        </div>
    </div>
</div>