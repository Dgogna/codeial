    <div class="card-body">
        <h5 class="card-title"><%= profile_user.name %> Profile</h5>
        <p class="card-text">Name: <%= profile_user.name %></p>
        <p class="card-text">Email: <%= profile_user.email %></p>
        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
    </div>
